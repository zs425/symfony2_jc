{% extends 'JetChartersAppBundle:Admin:base.html.twig' %}

{% block page_styles %}
{{parent()}}
<link rel="stylesheet" href="{{ asset('bundles/jetchartersapp/admin/css/compiled/user-list.css') }}" type="text/css" media="screen" />
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts
        '@JetChartersAppBundle/Resources/public/cp_theme/js/livesearch.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}


{% block content %}
       <div class="container-fluid">
        <div id="pad-wrapper" class="form-page">
            <div class="row-fluid form-wrapper">
                    <div class="row-fluid head">
                        <div class="span12">
                            <h4 style="margin:-20px 0 20px 0;"> + Charter Aircraft</h4>
                        </div>
                    </div>
                    <div class="row-fluid filter-block">
                        <div class="span8">
                            <input type="text" placeholder="Filter" id="search">
                        </div>
                        <div class="span4 pull-right" align="right">
                            <a class="btn-glow primary" href="{{ path('admin_aircraft_new') }}">Add New Charter Aircraft</a>
                        </div>
                    </div>

                    <table class="table table-hover" style="margin-top:15px;">
                        <thead>
                            <tr>
                                <th class="span3">
                                    Name
                                </th>
                                <th class="span2">
                                    <span class="line"></span>
                                    Type
                                </th>
                                <th class="span2">
                                    <span class="line"></span>
                                    Location
                                </th>
                                <th class="span2">
                                    <span class="line"></span>
                                    Tail #
                                </th>
                                <th class="span2">
                                    <span class="line"></span>
                                    Status
                                </th>
                                 <th class="span2">
                                    <span class="line"></span>
                                    Operator
                                </th>
                                <th class="span4">
                                    <span class="line"></span>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        {# TODO: Zebra Stripe this table with #ffffff,#f0f0f0 #}
                            {% for aircraft in entities %}
                            <tr>
                                <td>
                                    {% if aircraft.images %}
                                        {#<img width="100" height="100" src="{{ vich_uploader_asset(aircraft.images[0], 'image') }}" alt="{{ aircraft.name }}" />#}
                                    {% endif %}
                                    {{aircraft.name}}
                                </td>
                                <td>
                                    {{aircraft.type}}
                                </td>
                                <td>
                                    {{aircraft.location}}
                                </td>
                                <td>
                                    {{aircraft.tailNumber}}
                                </td>
                                <td align="center" style="color: green;">
                                    {#{{aircraft.status}}#}
                                </td>
                                <td align="center">
                                    {{aircraft.company}}
                                </td>
                                <td style="padding:5px;" align="right">
                                    <a href="{{ path('admin_aircraft_edit', { 'id': aircraft.id }) }}">
                                    <div class="btn-flat icon" style="margin-right:5px;"><i class="icon-edit"></i> Edit</div></a>
                                    {# <a href="aircraft.cfm?action=disable&id=85d4c15b-c9df-4ef2-aee9-804daded104b"><div class="btn-flat icon" style="margin-right:5px;"><i class="icon-pause"></i> Pause</div></a>

                                    <a href="aircraft.cfm?action=deleteConfirm&id=85d4c15b-c9df-4ef2-aee9-804daded104b"><div class="btn-flat icon" style="margin-right:5px;"><i class="icon-remove"></i> Delete</div></a> #}

                                </td>
                            </tr>
                            {% endfor %}
                    </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}