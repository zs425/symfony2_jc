{% extends 'JetChartersAppBundle:Admin:base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div id="pad-wrapper" class="form-page">
        <div class="row-fluid form-wrapper">
            <div class="row-fluid head">
                <div class="span12">
                    <h4 style="margin:-20px 0 20px 0;">+ Jet Charters Network Member Badges</h4>
                </div>
            </div>
            <div class="row-fluid filter-block">
                <div class="span4">
                    {{ form(form) }}

                    <h5>Get Code:</h5>
                    <textarea style="width:400px; height:150px;">{{ badge_code }}</textarea>

                </div>
                <div class="span8">
                    <h5>Preview:</h5>
                    <div style="display:inline-block; border:1px solid lightgray; padding:10px; margin-top:10px;">
                    {{ badge_code | raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
