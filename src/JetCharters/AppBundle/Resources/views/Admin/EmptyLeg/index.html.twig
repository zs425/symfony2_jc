{% extends 'JetChartersAppBundle:Admin:base.html.twig' %}

{% block content -%}
    <div class="container-fluid">
        <div id="pad-wrapper" class="form-page">
            <div class="row-fluid form-wrapper">
                <div class="row-fluid head">
                    <div class="span12">
                        <h4 style="margin:-20px 0 20px 0;"> + Empty Legs</h4>
                    </div>
                </div>
                <div class="row-fluid filter-block">
                    <div class="pull-right">
                        <a class="btn-glow primary" href="{{ path('admin_emptylegs_new') }}"> Add New Empty Leg </a>
                    </div>
                </div>
                {% if entities is not empty %}
                <table class="table table-hover" style="margin-top:15px;">
                    <thead>
                        <tr>
                            <th class="span2">
                                Leg ID
                            </th>
                            <th class="span2">
                                <span class="line"></span>
                                Origin
                            </th>
                            <th class="span2">
                                <span class="line"></span>
                                Destination
                            </th>
                            <th class="span2">
                                <span class="line"></span>
                                Dates Available
                            </th>
                            <th class="span2">
                                <span class="line"></span>
                                Aircraft
                            </th>
                            <th class="span2">
                                <span class="line"></span>
                                OperatorUser
                            </th>
                            <th class="span2">
                                <span class="line"></span>
                                Actions
                            </th>
                        </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_emptylegs_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{% if entity.origin %} {{ entity.origin.name }} {% endif %}</td>
                        <td>{% if entity.destination %} {{ entity.destination.name }}{% endif %}</td>
                        <td>{% if entity.fromDate %}{{ entity.fromDate|date('m/d/Y') }}{% endif %}â€”{% if entity.toDate %}{{ entity.toDate|date('m/d/Y') }}{% endif %}</td>
                        <td>{% if entity.aircraft %} {{ entity.aircraft.name }} {% endif %}</td>
                        <td>{% if entity.operator and entity.operator is defined %} {{ entity.operator.name }} {% endif %}</td>
                        <td>
                            <a class="btn-flat icon" href="{{ path('admin_emptylegs_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% else %}
            <div class="alert" style="margin-top:15px;"><i class="icon-warning-sign"></i>You have no empty legs in the Jetcharters.com system.</div>
            {% endif %}

            </div>
        </div>
    </div>
    {% endblock %}
